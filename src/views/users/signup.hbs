<div class="row">
  <div class="col-md-10 mx-auto text-center">
    <div class="card">
      <div class="card-header">
        <h1 class="h4">
          Registro de Cuenta
        </h1>
      </div>
      {{!-- <img class=" mx-auto d-block logo2 m-4" src="/img/logo2.png" alt="Logo"> --}}
      <div class="card-body">
        <form action="/users/signup" method="POST">

          <div class="card-body">
            {{!-- Datos de la Escuela --}}
            <div class="form-group">
              <div class="form-group">
                <h5>Datos de la Escuela</h5>
              </div>


              {{!-- Escuela --}}
              <div class="form-group">
                <input type="text" style="text-transform: uppercase;" class="form-control" name="escuela"
                  placeholder="Escuela: Instituto Tecnológico Superior de Misantla" autofocus required>
              </div>
              {{!-- Clave --}}
              <div class="form-group">
                <input type="text" style="text-transform: uppercase;" class="form-control" name="clave"
                  placeholder="Clave de la escuela" required>
              </div>
              {{!-- Nivel Academico --}}
              <div class="form-group">
                <select class="custom-select" name="nivel" id="validationDefault" value="{{nivel}}">
                  <option selected disabled value="">Nivel Academico</option>
                  <option>PREESCOLAR</option>
                  <option>PRIMARIA</option>
                  <option>SECUNDARIA</option>
                  <option>PREPARATORIA</option>
                  <option>INGENIERIA</option>
                  <option>MAESTRIA</option>
                  <option>DOCTORADO</option>
                </select>
              </div>
            </div>
          </div>

          <div class="card-body">
            <div class="form-group ">
              <h5>Datos del Usuario</h5>
            </div>
            {{!--------Nombre---------}}
            <div class="form-group">
              <input type="text" style="text-transform: uppercase;" class="form-control" name="nombre"
                placeholder="Nombre Completo" value="{{name}}" required>
            </div>
            {{!--------Apellidos---------}}
            <div class="form-group">
              <input type="text" style="text-transform: uppercase;" class="form-control" name="apellidos"
                placeholder="Apellido Paterno" value="{{apellidos}}" required>
            </div>
            {{!-- Fecha de nacimiento --}}

            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"> Fecha de Nacimiento </div>
              </div>
              <input type="date" name="nacimiento" class="form-control" value="{{nacimiento}}" required>
            </div>
            {{!--------Matrícula--------}}
            <div class="form-group Espacio">
              <input type="text" style="text-transform: uppercase;" class="form-control" name="matricula"
                placeholder="Matricula" value="{{matricula}}" required>
            </div>
            {{!--------Correo---------}}
            <div class="form-group">
              <input type="email" class="form-control" name="correo" placeholder="Correo: matrícula@itsm.edu.mx"
                value="{{correo}}" required>
            </div>
            {{!--------Contrasena---------}}
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}"
                required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar contraseña"
                value="{{confirm_password}}" required>
            </div>
          </div>




          {{!-- Validacion de los datos --}}
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" required>
            <label class="form-check-label" for="invalidCheck3">
              aceptar las condiciones
            </label>
          </div>
          <button class="btn btn-primary btn-block">
            Registrar
          </button>

        </form>
        <div class="card-body">
          <h6>¿Ya estas registrado?</h6>
          <a href="/" class="btn btn-primary btn-sm">Ingresar</a>
          <div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>