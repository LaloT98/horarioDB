<div class="card">
    <div class="card-header"><i class="fad fa-cowbell-more"></i>
        <h2>Maestros (Cantidad de registros: {{totalTeacher}})<a href="/schedule/teacher-add" class="btn btn-success"> Agregar </a></h2>
        <h2></h2>
    </div>
    <div class="card-body">
        <table class="table table-dark table-info">
            <thead class="text-center">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Horas que trabaja por semana</th>
                    <th scope="col">Editar</th>
                    <th scope="col">ID</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>

            <tbody class="table-light text-center" id="letraTabla">
                {{#each Teacher}}
                <tr>
                    <th scope="row">{{Tname}}</th>
                    <th scope="row">{{TworkWeek}}</th>
                    <td> <a href="/schedule/Tedit/{{_id}}"><i class="fas fa-edit"></i></a></td>
                    <td>{{_id}}</td>
                    <td>
                        <form action="/schedule/Tdelete/{{_id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger  btn-sm"> Confirmar </button>
                        </form>
                    </td>
                </tr>
                {{else}}
                <th scope="row"> </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>