
<div class="card">
    <div class="card-header"><i class="fad fa-cowbell-more"></i>
        <h2>Salones (Cantidad de registros: {{totalClassroom}}) <a href="/schedule/classroom-add" class="btn btn-success"> Agregar </a></h2>
    </div>
    <div class="card-body">
        <table class="table table-dark table-info">
            <thead class="text-center">
                <tr>
                    <th scope="col">Tipo de salon</th>
                    <th scope="col">Capacidad</th>
                    <th scope="col">Editar</th>
                    <th scope="col">ID</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>

            <tbody class="table-light text-center" id="letraTabla">
                {{#each Classroom}}
                <tr>
                    <th scope="row">{{Ctype}}</th>
                    <th scope="row">{{Ccapacity}}</th>
                    <td> <a href="/schedule/Cedit/{{_id}}"><i class="fas fa-edit"></i></a></td>
                    <td>{{_id}}</td>
                    <td>
                        <form action="/schedule/Cdelete/{{_id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger  btn-sm">  Confirmar </button>
                        </form>
                    </td>
                </tr>
                {{else}}
                <th scope="row"> </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>