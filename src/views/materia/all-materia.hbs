<div class="card">
    <div class="card-header"><i class="fad fa-cowbell-more"></i>
        <h2>Materias (Cantidad de registros: {{totalMateria}}) <a href="/schedule/materia-add" class="btn btn-success"> Agregar </a></h2>
    </div>
    <div class="card-body">
        <table class="table table-dark table-info">
            <thead class="text-center">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Hora ideal</th>
                    <th scope="col">Maximo por dia</th>
                    <th scope="col">Maximo a la semana</th>

                    <th scope="col">Editar</th>
                    <th scope="col">ID</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>

            <tbody class="table-light text-center" id="letraTabla">
                {{#each Materia}}
                <tr>
                    <th scope="row">{{Mname}}</th>
                    <th scope="row">{{MidealHours}}</th>
                    <th scope="row">{{MmaxTimeDay}}</th>
                    <th scope="row">{{MHoursWeek}}</th>
                    <td> <a href="/schedule/Medit/{{_id}}"><i class="fas fa-edit"></i></a></td>
                    <td>{{_id}}</td>
                    <td>
                        <form action="/schedule/Mdelete/{{_id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger  btn-sm"> Confirmar </button>
                        </form>
                    </td>
                    <th></th>
                </tr>
                {{else}}
                <th scope="row"> </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>