<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Datos de los Alumnos</h3>
        </div>
        <div class="card-body">
            <form action="/schedule/student" method="POST">
                <div class="form-group">
                    <select class="custom-select" name="title" id="validationDefault" value="{{title}}" required>
                        <option selected disabled value="">Seleccionar</option>
                        <option>ESTUDIANTE</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="number" name="Stotal" class="form-control"
                        placeholder="Ingresa el numero total de estudiantes" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-info btn-block" type="submit">Guardar</button>
                </div>

            </form>
        </div>
    </div>
</div>