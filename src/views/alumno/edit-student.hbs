<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar</h3>
        </div>
        <div class="card-body">
            <form action="/schedule/edit-student/{{STUDENT._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">
                    <input type="number" name="Stotal" class="form-control" placeholder="Total de estudiantes"
                        value="{{STUDENT.Stotal}}">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>