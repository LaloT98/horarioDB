<div class="card">
    <div class="card-header"><i class="fad fa-cowbell-more"></i>
        <h2>Estudiantes (Cantidad de registros: {{totalStudent}})</h2>
    </div>
    <div class="card-body">
        <table class="table table-dark table-info">
            <thead class="text-center">
                <tr>
                    <th scope="col">Total</th>
                    <th scope="col">Editar</th>
                    <th scope="col">ID</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>

            <tbody class="table-light text-center" id="letraTabla">
                {{#each Student}}
                <tr>
                    <th scope="row">{{Stotal}}</th>
                    <td> <a href="/schedule/edit/{{_id}}"><i class="fas fa-edit"></i></a></td>
                    <td>{{_id}}</td>
                    <td>
                        <form action="/schedule/Sdelete/{{_id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger  btn-sm">
                                Delete
                            </button>
                        </form>

                    </td>
                </tr>
                {{else}}
                <th scope="row">
                    <a href="/schedule/student-add" class="btn btn-success">  Agregar  </a>
                </th>
                <th></th>
                <th></th>
                <th></th>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>